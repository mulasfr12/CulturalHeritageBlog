@model WebAPI.DTOs.ThemeDto

<div class="container mt-5">
    <h1 class="text-center mb-4 text-warning">Edit Theme</h1>

    <form method="post" class="card p-4 shadow">
        <input type="hidden" name="ThemeID" value="@Model.ThemeID" />

        <div class="mb-3">
            <label class="form-label">Name:</label>
            <input type="text" class="form-control" name="Name" value="@Model.Name" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Description:</label>
            <textarea class="form-control" name="Description" rows="3">@Model.Description</textarea>
        </div>

        <button type="submit" class="btn btn-warning">Save Changes</button>
    </form>

    <!-- Navigation -->
    <nav class="mt-4 text-center">
        <a href="/Dashboard/AdminDashboard" class="btn btn-primary">Back to Admin Dashboard</a>
    </nav>
</div>
