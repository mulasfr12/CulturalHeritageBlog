@model WebApp.ViewModels.ThemeViewModel

<div class="container mt-5">
    <h1 class="text-center mb-4 text-success">Associate Theme with Cultural Heritage</h1>

    <form method="post" class="card p-4 shadow">
        <div class="mb-3">
            <label for="heritageId" class="form-label">Select Cultural Heritage:</label>
            <select id="heritageId" class="form-select" name="heritageId" required>
                <option value="">-- Select a Cultural Heritage --</option>
                @if (ViewBag.CulturalHeritages != null)
                {
                    foreach (var heritage in ViewBag.CulturalHeritages)
                    {
                        <option value="@heritage.HeritageID">@heritage.Name</option>
                    }
                }
            </select>
        </div>

        <div class="mb-3">
            <label for="themeId" class="form-label">Select Theme:</label>
            <select id="themeId" class="form-select" name="themeId" required>
                <option value="">-- Select a Theme --</option>
                @if (ViewBag.AllThemes != null)
                {
                    foreach (var theme in ViewBag.AllThemes)
                    {
                        <option value="@theme.ThemeID">@theme.Name</option>
                    }
                }
            </select>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description:</label>
            <textarea id="description" class="form-control" name="description" rows="3"></textarea>
        </div>

        <button type="submit" class="btn btn-success">Add Theme to Cultural Heritage</button>
    </form>

    <!-- Navigation -->
    <nav class="mt-4">
        <a href="/CulturalHeritageThemes" class="btn btn-secondary">Back to Manage Themes</a>
        <a href="/AdminDashboard" class="btn btn-primary">Back to Admin Dashboard</a>
    </nav>
</div>
