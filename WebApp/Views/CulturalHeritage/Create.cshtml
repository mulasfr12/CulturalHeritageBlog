@model WebApp.ViewModels.CulturalHeritageViewModel

<h1>Create Cultural Heritage</h1>

<form method="post">
    <label>Name:</label>
    <input type="text" name="Name" value="@Model.Name" required />

    <label>Description:</label>
    <textarea name="Description">@Model.Description</textarea>

    <label>Location:</label>
    <input type="text" name="Location" value="@Model.Location" />

    <label>National Minority:</label>
    <input type="text" name="NationalMinority" value="@Model.NationalMinority" />

    <button type="submit">Create</button>
</form>
@if (ViewBag.ErrorMessage != null)
{
    <div style="color: red; margin-bottom: 10px;">
        @ViewBag.ErrorMessage
    </div>
}

<nav>
    <a href="/CulturalHeritage">View Cultural Heritages</a> |
    <a href="/Account/Logout">Logout</a>
</nav>
