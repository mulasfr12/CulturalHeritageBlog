@model WebApp.ViewModels.CulturalHeritageViewModel

<div class="container mt-5">
    <h1 class="text-center mb-4 text-warning">Edit Cultural Heritage</h1>

    <form method="post" class="card p-4 shadow">
        <input type="hidden" name="HeritageID" value="@Model.HeritageID" />

        <div class="mb-3">
            <label class="form-label">Name:</label>
            <input type="text" class="form-control" name="Name" value="@Model.Name" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Description:</label>
            <textarea class="form-control" name="Description" rows="3">@Model.Description</textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Location:</label>
            <input type="text" class="form-control" name="Location" value="@Model.Location" />
        </div>

        <div class="mb-3">
            <label class="form-label">National Minority:</label>
            <select class="form-select" name="NationalMinorityID" required>
                <option value="">-- Select National Minority --</option>
                @if (ViewBag.NationalMinorities != null)
                {
                    foreach (var minority in (List<WebApp.ViewModels.NationalMinorityViewModel>)ViewBag.NationalMinorities)
                    {
                        <option value="@minority.MinorityID" selected="@(Model?.NationalMinorityID == minority.MinorityID)">@minority.Name</option>
                    }
                }
            </select>
        </div>

        <button type="submit" class="btn btn-warning">Save Changes</button>
    </form>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger mt-3">@ViewBag.ErrorMessage</div>
    }

    <!-- Navigation -->
    <nav class="mt-4">
        <a href="/Dashboard/AdminDashboard" class="btn btn-primary">Back to Admin Dashboard</a>
        <a href="/CulturalHeritage" class="btn btn-secondary">View Cultural Heritages</a>
    </nav>
</div>
