@model WebApp.ViewModels.CulturalHeritageListViewModel

<h1>Cultural Heritage Management</h1>

<form method="get">
    <input type="text" name="search" placeholder="Search by name" value="@Model.Search" />
    <select name="nationalMinority">
        <option value="">-- Select National Minority --</option>
        @foreach (var minority in Model.NationalMinorities)
        {
            if (Model.NationalMinority == minority.MinorityID)
            {
                <option value="@minority.MinorityID" selected>@minority.Name</option>
            }
            else
            {
                <option value="@minority.MinorityID">@minority.Name</option>
            }
        }
    </select>


    <button type="submit">Search</button>
</form>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Location</th>
            <th>National Minority</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var heritage in Model.Heritages)
        {
            <tr>
                <td>@heritage.Name</td>
                <td>@heritage.Description</td>
                <td>@heritage.Location</td>
                <td>@heritage.NationalMinorityName</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = heritage.HeritageID })">Edit</a> |
                    <a href="@Url.Action("Delete", new { id = heritage.HeritageID })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    Page @Model.CurrentPage of @Model.TotalPages
    @if (Model.CurrentPage > 1)
    {
        <a href="@Url.Action("Index", new { page = Model.CurrentPage - 1 })">Previous</a>
    }
    @if (Model.CurrentPage < Model.TotalPages)
    {
        <a href="@Url.Action("Index", new { page = Model.CurrentPage + 1 })">Next</a>
    }
</div>

<p><a href="@Url.Action("Create")">Add New Cultural Heritage</a></p>
<nav>
    <a href="/CulturalHeritage">View Cultural Heritages</a> |
    <a href="/Account/Logout">Logout</a>
</nav>
