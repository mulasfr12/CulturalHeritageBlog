@model IEnumerable<WebAPI.DTOs.NationalMinorityDto>

<h1>National Minorities</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var minority in Model)
        {
            <tr>
                <td>@minority.Name</td>
                <td>@minority.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@minority.MinorityID" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@minority.MinorityID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<a asp-action="Create" class="btn btn-success">Create New</a>

<nav class="mt-4">
    <a href="/Dashboard/AdminDashboard" class="btn btn-primary">Back to Admin Dashboard</a>
    <a href="/CulturalHeritage" class="btn btn-secondary">View Cultural Heritages</a>
</nav>
