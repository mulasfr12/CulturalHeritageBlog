@model WebAPI.DTOs.NationalMinorityDto

<h1>Delete National Minority</h1>

<div>
    <h4>Are you sure you want to delete this National Minority?</h4>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>
    <form asp-action="ConfirmDelete" method="post">
        <input type="hidden" name="id" value="@Model.MinorityID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>

</div>
